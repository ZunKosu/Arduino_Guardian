//翻到一个DHT11，看来能用wifiduino来做了



#define BLINKER_WIFI
char auth[] = "2c2a1534511d";
char ssid[] = "zunk";
char pswd[] = "xsdxsd123";

#include <dht11.h>
#include <Blinker.h>

dht11 DHT11;

// 设置 DHT 引脚 为 Pin 12
#define DHT11PIN 12

BlinkerNumber Frs1("num-yl");         //指定到压力方块
BlinkerNumber Wrs1("num-49x");         //指定到湿度方块
BlinkerNumber Prs1("num-wd");
BlinkerNumber Prox1("tex-po8");        //指定到手机的红外方块
BlinkerNumber Prox2("tex-ur2");        //指定到手机的整合方块

int Wrs_Value;
int Prs_Value;
int proximitySensor = 13;                //13口红外
int prox_Value;

void heartbeat()                               //心跳包附带测量值
{

}


void setup() {
  Serial.begin(115200);
  Serial.println("DHT11 TEST PROGRAM");
  Serial.print("LIBRARY");
  // 输出 DHT 库的版本号
  Serial.println(DHT11LIB_VERSION);
  Serial.println();

   BLINKER_DEBUG.stream(Serial);
    
    // 初始化blinker
    Blinker.begin(auth, ssid, pswd);
    Blinker.attachHeartbeat(heartbeat);

}


void loop() {
  Blinker.run();
  Serial.println("\n");

  int chk = DHT11.read(DHT11PIN);

  // 测试 DHT 是否正确连接
  Serial.print("Read sensor: ");
  switch (chk)
  {
    case DHTLIB_OK: 
    Serial.println("OK"); 
    break;
    case DHTLIB_ERROR_CHECKSUM: 
    Serial.println("Checksum error"); 
    break;
    case DHTLIB_ERROR_TIMEOUT: 
    Serial.println("Time out error"); 
    break;
    default: 
    Serial.println("Unknown error"); 
    break;
  }

  // 获取测量数据
  Serial.print("Humidity (%): ");
  Serial.println((float)DHT11.humidity, 2);
  Wrs_Value = (float)DHT11.humidity, 2;
  Wrs1.print(Wrs_Value);
  
  Blinker.delay(2000);
  
  Serial.print("Temperature °C): ");
  Serial.println((float)DHT11.temperature, 2);
  Prs_Value = (float)DHT11.temperature, 2;
  Prs1.print(Prs_Value);
  
  Blinker.delay(2000);
  delay(1000);
  
  //热释电模块工作代码

  int value = digitalRead(proximitySensor);
  if (value == 0)
  {
    Serial.println("No one here");
    Prox1.text("No one");
    Prox1.print();
   
  }
  else if (value == 1)
  {
    Serial.println("Somebody here!!");
    Prox1.text("Somebody here!!");
    Prox1.print();
  }
  delay(1000);
  
  Blinker.delay(1000);
  //All in 整合功能

  if (value == 1)
  {
    if (Prs_Value > 10)
    {
      Serial.println("BeCareful");
      Prox2.text("Not Safe");
      Prox2.color("#FF0000");
      Prox2.print();
      Blinker.vibrate(800);
      Blinker.wechat("Be Careful!Your child is still in the car!");
      delay(500);
    }
    else
    {
      delay(100);
    }
  }
  else 
  {
    Serial.println("Very Safe");
    Prox2.text("Safe");
    Prox2.color("#008000");
    Prox2.print();
  }
    Blinker.delay(5000);
}
